# Environment Variables Template for Reacher MVP
# Copy this file to .env and fill in your Supabase credentials

# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================

# Get these from Supabase Dashboard → Settings → API
SUPABASE_URL=https://[PROJECT_ID].supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL connection string from Supabase
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:[DATABASE_PASSWORD]@[PROJECT_ID].supabase.co:5432/postgres

# ============================================================================
# AUTHENTICATION
# ============================================================================

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your_generated_jwt_secret_here
JWT_EXPIRY=24h

# API Gateway configuration
GATEWAY_PORT=5000
GATEWAY_AUTH_ENABLED=true

# ============================================================================
# MICROSERVICES PORTS
# ============================================================================

AUTH_SERVICE_PORT=5001
USER_SERVICE_PORT=5002
PRODUCT_SERVICE_PORT=5003
PROVIDER_SERVICE_PORT=5004
TRUST_SERVICE_PORT=5005
MESSAGE_SERVICE_PORT=5006
NOTIFICATION_SERVICE_PORT=5007

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================

# Next.js public variables (accessible in browser)
NEXT_PUBLIC_SUPABASE_URL=https://[PROJECT_ID].supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
NEXT_PUBLIC_API_GATEWAY_URL=http://localhost:5000

# Frontend-only (not exposed to browser)
NEXT_PUBLIC_NODE_ENV=development

# ============================================================================
# EMAIL CONFIGURATION (Optional)
# ============================================================================

# For sending authentication emails, notifications, etc.
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@reacher.app

# ============================================================================
# FILE STORAGE (Optional)
# ============================================================================

# For product images, profile avatars, etc.
# Using Supabase Storage (built-in)
STORAGE_BUCKET_NAME=reacher-uploads
STORAGE_REGION=auto

# Or use external S3
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=

# ============================================================================
# LOGGING & MONITORING
# ============================================================================

NODE_ENV=development
LOG_LEVEL=info
SENTRY_DSN=https://your_sentry_key@sentry.io/project_id

# ============================================================================
# REDIS CONFIGURATION (Optional)
# ============================================================================

# For caching, sessions, real-time features
REDIS_URL=redis://localhost:6379

# ============================================================================
# STRIPE CONFIGURATION (If using payments)
# ============================================================================

# STRIPE_PUBLIC_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# ============================================================================
# NOTES
# ============================================================================

# 1. NEVER commit actual .env file to git
# 2. Use .env.example for template (this file)
# 3. Each environment (dev/staging/prod) needs separate variables
# 4. Service Role Key should ONLY be on backend, never in frontend
# 5. Anon Key is safe to expose (used by frontend)

# For local development:
# - Copy this file to .env
# - Replace placeholders with actual values
# - Start services: npm start in each service directory

# For production deployment:
# - Use environment variables from deployment platform
# - For Vercel: Settings → Environment Variables
# - For Docker: Use Docker secrets or env files
# - For self-hosted: Use .env file or environment setup
